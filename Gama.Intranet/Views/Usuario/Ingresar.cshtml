                <input type="email" name="email" class="form-control" id="email" placeholder="Usuario" value="gerardo">
                </div>
                <div class="form-group">
                <label for="exampleInputPassword1">Contraseña</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Contraseña" value="hola">
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer text-center">
                <button type="submit" class="btn text-white w-50" style="background-color: #0c71c3;">Enviar</button>
            </div>
            </form>
        </div>
